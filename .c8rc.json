{
  "all": true,
  "include": ["lib/**/*.js"],
  "exclude": [
    "lib/views/**",
    "test/**",
    "test-*.js",
    "**/*.test.js",
    "**/*.spec.js",
    "docs/**",
    "coverage/**",
    "node_modules/**",
    "bin/**",
    "patches/**",
    "index.js",
    "telemetry.js"
  ],
  "reporter": ["text", "text-summary", "html", "lcov"],
  "check-coverage": false,
  "clean": true,
  "temp-directory": "./coverage/tmp"
}
