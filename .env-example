LOCAL_INSECURE=true
PORT=3001
BASE_URL=http://localhost:3001
MCP_SERVER_URL=http://localhost:3000/mcp
MCP_SERVER_RUN_COMMAND="npm"
MCP_SERVER_RUN_ARGS_JSON='["start"]'
MCP_SERVER_RUN_DIR="/app"
MCP_SERVER_RUN_ENV_JSON='{"PORT":3000,"BACKEND_API_URL":"https://mcp.example.com"}'
MCP_AUTH_PROXY_REDIS_URL=redis://localhost:6379

# Identity Provider Configuration
IDENTITY_SERVER_URL=
IDENTITY_CLIENT_ID=
IDENTITY_CLIENT_SECRET=
IDENTITY_SCOPE=
# Optionally, instead of OIDC discovery, reference a ServerMetadata JSON file
# https://github.com/panva/openid-client/blob/v6.x/docs/interfaces/ServerMetadata.md
IDENTITY_SERVER_METADATA_FILE=

# OAuth Provider Configuration
# Generate with: echo "OIDC_PROVIDER_JWKS='[$(jwkgen --jwk)]'" >> .env
# Or manually provide a JSON array of one or more private JSON Web Keysets
OIDC_PROVIDER_JWKS=

# Optional: Custom views path for OAuth interaction pages
# OIDC_PROVIDER_VIEWS_PATH=

# Optional: Rate limiting configuration (defaults shown)
# MAX_REQUESTS=60
# MAX_REQUESTS_WINDOW=60000

# Optional: Redis key prefix (default: 'oidc:')
# MCP_AUTH_PROXY_REDIS_PREFIX=oidc:

# Optional: Provider scope (default: 'openid offline_access')
# PROVIDER_SCOPE=openid offline_access
