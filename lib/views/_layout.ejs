<!doctype html>
<html>

<head>
  <meta charset=utf-8>
  <meta content="width=device-width,initial-scale=1.0,minimum-scale=1.0,maximum-scale=1.0,user-scalable=no"
    name=viewport>
  <title><%= branding.title %></title>
  <link rel="shortcut icon" type="image/x-icon" href="<%= branding.favicon %>">
  <style>
    :root {
      --brand-primary: <%= branding.colors.primary %>;
      --brand-secondary: <%= branding.colors.secondary %>;
      --brand-background: <%= branding.colors.background %>;
      --brand-text: <%= branding.colors.text %>;
      --brand-text-muted: <%= branding.colors.textMuted %>;
      --brand-border: <%= branding.colors.border %>;
    }

    html,
    body {
      font-family: sans-serif;
      -ms-text-size-adjust: 100%;
      -webkit-text-size-adjust: 100%;
      background: var(--brand-background);
      height: 100%;
      -webkit-font-smoothing: antialiased;
    }

    body {
      margin: 0;
      padding: 0;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
    }

    .message {
      align-self: center;
      display: flex;
      flex-direction: column;
      align-items: center;
      padding: 0px 20px;
      width: 50vw;
      min-width: 300px;
    }

    .message__title {
      margin-top: 15px;
      color: var(--brand-text);
      margin-bottom: 8px;
    }

    p {
      -webkit-margin-after: 0px;
      -webkit-margin-before: 0px;
      color: var(--brand-text);
      line-height: 21px;
      margin-bottom: 4px;
    }

    a {
      color: var(--brand-text);
    }

    .btn {
      text-decoration: none;
      padding: 8px 15px;
      border-radius: 4px;
      margin-top: 10px;
      color: var(--brand-text);
      border: 1px solid var(--brand-border);
    }

    .hk-logo,
    .app-icon {
      fill: var(--brand-text-muted);
    }

    .info {
      fill: var(--brand-text-muted);
    }

    .info_area {
      position: fixed;
      right: 12px;
      bottom: 12px;
    }

    .logo {
      position: fixed;
      left: 12px;
      bottom: 12px;
    }

    .call-to-action {
      margin-top: 30px;
      border-top: 1px solid var(--brand-border);
      padding-top: 10px;
      font-weight: bolder;
      color: var(--brand-text);
    }

    .login-card {
      padding: 40px;
      padding-top: 0px;
      padding-bottom: 10px;
      border: 1px solid var(--brand-border);
      border-radius: 12px;
      margin: 0 auto 10px;
      overflow: hidden;
    }

    .login-card + .login-card {
      padding-top: 10px;
    }

    .login-card [type=submit] {
    }

    .login-card input[type=text], input[type=email], input[type=password] {
      height: 44px;
      width: 100%;
      margin-bottom: 10px;
      -webkit-appearance: none;
      background: #fff;
      border: 1px solid #d9d9d9;
      border-top: 1px solid #c0c0c0;
      padding: 0 8px;
      box-sizing: border-box;
      -moz-box-sizing: border-box;
    }

    .login-submit {
      background-color: var(--brand-primary);
    }

    .login-client-image img {
      margin-bottom: 20px;
      display: block;
      margin-left: auto;
      margin-right: auto;
      width: 20%;
    }

    .login-card input[type=checkbox] {
      margin-bottom: 10px;
    }

    .login-card label {
      color: var(--brand-text);
    }

    .form-controls {
      text-align: right;
    }

    ul {
      color: var(--brand-text);
      padding-left: 1em;
      list-style-type: circle;
    }

    li + ul, ul + li, li + li {
      padding-top: 0.3em;
    }

    li > pre {
      font-family: Fixed, monospace;
      margin: 0px;
    }

    code {
      background-color: #fff;
      color: #333;
      padding: 2px;
    }

    button {
      font-size: 100%;
      cursor: pointer;
    }
  </style>
  <base target=_parent />
</head>

<body>
  <div class=spacer></div>
  <div class=message>
    <div class="login-card">
      <h1 class=message__title>
        <%= title %>
      </h1>
      <%- body %>
    </div>
  </div>
  <div class=logo>
    <%- branding.logo %>
  </div>
</body>

</html>
